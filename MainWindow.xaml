<Window x:Class="BandwidthCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bandwidth Calculator" 
        Height="750" 
        Width="1100"
        MinHeight="650"
        MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F3F2F1">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="White" Padding="15" Margin="0,0,0,10" CornerRadius="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Заголовок приложения -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Bandwidth Calculator" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="#0078D4"/>
                    <TextBlock Text="Конвертер пропускной способности сети" 
                               FontSize="14" 
                               Foreground="#605E5C"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Правая панель с настройками -->
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                    <!-- Блок точности -->
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Точность (знаков после запятой):"
                                   Foreground="#605E5C"
                                   Margin="0,0,0,5"/>

                        <WrapPanel HorizontalAlignment="Left">
                            <RadioButton x:Name="Precision1" Content="1" GroupName="Precision" 
                                        Margin="3,0" IsChecked="True" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision2" Content="2" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision3" Content="3" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision4" Content="4" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision5" Content="5" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision6" Content="6" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision7" Content="7" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision8" Content="8" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision9" Content="9" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                            <RadioButton x:Name="Precision10" Content="10" GroupName="Precision" 
                                        Margin="3,0" VerticalAlignment="Center"/>
                        </WrapPanel>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая колонка: Биты -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Биты в секунду" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#0078D4"
                                   Margin="0,0,0,15"/>
                        <StackPanel x:Name="BitsPanel">
                            <TextBlock Text="Загрузка..." HorizontalAlignment="Center" Margin="10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Правая колонка: Байты -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Байты в секунду" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#0078D4"
                                   Margin="0,0,0,15"/>
                        <StackPanel x:Name="BytesPanel">
                            <TextBlock Text="Загрузка..." HorizontalAlignment="Center" Margin="10"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="10" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ResetButton" 
                        Content="Сбросить все" 
                        Width="120" 
                        Height="35" 
                        Margin="10"
                        Background="#0078D4"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button x:Name="ConvertButton" 
                        Content="Конвертировать" 
                        Width="120" 
                        Height="35" 
                        Margin="10"
                        Background="#28a745"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>

                <Button x:Name="CopyAllButton" 
                        Content="Копировать всё" 
                        Width="120" 
                        Height="35" 
                        Margin="10"
                        Background="Transparent"
                        Foreground="#0078D4"
                        BorderBrush="#0078D4"
                        BorderThickness="1"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>